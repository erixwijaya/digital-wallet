{
  "info": {
    "name": "Digital Wallet API",
    "description": "Dokumentasi API untuk Digital Wallet Microservices System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5050/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "wallet_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login dan mendapatkan JWT token"
          },
          "response": []
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New User\",\n  \"email\": \"newuser@example.com\",\n  \"phone\": \"081234567899\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Registrasi user baru"
          },
          "response": []
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            },
            "description": "Mendapatkan semua user (memerlukan token)"
          },
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Mendapatkan detail user berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"phone\": \"081234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Update informasi user"
          },
          "response": []
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/verify",
              "host": ["{{base_url}}"],
              "path": ["users", "verify"]
            },
            "description": "Verifikasi token dan mendapatkan info user"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Wallet Management",
      "item": [
        {
          "name": "Get User Wallets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallets",
              "host": ["{{base_url}}"],
              "path": ["wallets"]
            },
            "description": "Mendapatkan semua wallet milik user yang login"
          },
          "response": []
        },
        {
          "name": "Get Wallet by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallets/{{wallet_id}}",
              "host": ["{{base_url}}"],
              "path": ["wallets", "{{wallet_id}}"]
            },
            "description": "Mendapatkan detail wallet berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Create Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/wallets",
              "host": ["{{base_url}}"],
              "path": ["wallets"]
            },
            "description": "Membuat wallet baru untuk user"
          },
          "response": []
        },
        {
          "name": "Get Wallet Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallets/{{wallet_id}}/balance",
              "host": ["{{base_url}}"],
              "path": ["wallets", "{{wallet_id}}", "balance"]
            },
            "description": "Mendapatkan saldo wallet"
          },
          "response": []
        },
        {
          "name": "Top Up Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100000\n}"
            },
            "url": {
              "raw": "{{base_url}}/wallets/{{wallet_id}}/topup",
              "host": ["{{base_url}}"],
              "path": ["wallets", "{{wallet_id}}", "topup"]
            },
            "description": "Top up saldo wallet"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Transaction Management",
      "item": [
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions",
              "host": ["{{base_url}}"],
              "path": ["transactions"]
            },
            "description": "Mendapatkan semua transaksi user"
          },
          "response": []
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/1",
              "host": ["{{base_url}}"],
              "path": ["transactions", "1"]
            },
            "description": "Mendapatkan detail transaksi berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Get Transactions by Wallet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/wallet/{{wallet_id}}",
              "host": ["{{base_url}}"],
              "path": ["transactions", "wallet", "{{wallet_id}}"]
            },
            "description": "Mendapatkan transaksi berdasarkan wallet ID"
          },
          "response": []
        },
        {
          "name": "Get Transaction Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/stats",
              "host": ["{{base_url}}"],
              "path": ["transactions", "stats"]
            },
            "description": "Mendapatkan statistik transaksi user"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment Processing",
      "item": [
        {
          "name": "Get All Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments",
              "host": ["{{base_url}}"],
              "path": ["payments"]
            },
            "description": "Mendapatkan semua pembayaran user"
          },
          "response": []
        },
        {
          "name": "Get Payment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/payments/1",
              "host": ["{{base_url}}"],
              "path": ["payments", "1"]
            },
            "description": "Mendapatkan detail pembayaran berdasarkan ID"
          },
          "response": []
        },
        {
          "name": "Process Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet_id\": {{wallet_id}},\n  \"merchant\": \"Tokopedia\",\n  \"amount\": 50000\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/pay",
              "host": ["{{base_url}}"],
              "path": ["payments", "pay"]
            },
            "description": "Proses pembayaran ke merchant"
          },
          "response": []
        },
        {
          "name": "Process Transfer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"from_wallet_id\": {{wallet_id}},\n  \"to_user_id\": 2,\n  \"amount\": 25000\n}"
            },
            "url": {
              "raw": "{{base_url}}/payments/transfer",
              "host": ["{{base_url}}"],
              "path": ["payments", "transfer"]
            },
            "description": "Transfer saldo ke user lain"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Gateway Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["health"]
            },
            "description": "Cek status API Gateway dan semua services"
          },
          "response": []
        }
      ]
    }
  ]
}
